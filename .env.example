# =================================
# 数据库配置
# =================================

# Supabase PostgreSQL 数据库连接
# 获取方式：Supabase Dashboard → Project Settings → Database → Connection Pooling
#
# ⚠️ 重要：Vercel 不支持 IPv6，必须使用 Pooler 地址（不是直连地址）
# ✅ 正确：aws-0-[region].pooler.supabase.com (支持 IPv4)
# ❌ 错误：db.[project-ref].supabase.co (仅支持 IPv6)
#
# Transaction Mode (推荐用于 Serverless/Vercel，端口 6543)
DATABASE_URL="postgresql://postgres.[PROJECT-REF]:[YOUR-PASSWORD]@aws-0-[REGION].pooler.supabase.com:6543/postgres"
#
# Session Mode (用于持久连接，端口 5432)
# DATABASE_URL="postgresql://postgres.[PROJECT-REF]:[YOUR-PASSWORD]@aws-0-[REGION].pooler.supabase.com:5432/postgres"
#
# 参考文档：https://supabase.com/docs/guides/database/connecting-to-postgres

# Supabase 项目配置（可选，如果使用 Supabase Auth 或 Storage）
SUPABASE_URL="https://[PROJECT-REF].supabase.co"
SUPABASE_ANON_KEY="your-anon-key-here"
SUPABASE_SERVICE_ROLE_KEY="your-service-role-key-here"

# =================================
# 身份认证配置 (NextAuth.js)
# =================================

# NextAuth 密钥（生成方式：openssl rand -base64 32）
NEXTAUTH_SECRET="your-random-secret-here"

# 应用 URL
NEXTAUTH_URL="http://localhost:3000"

# =================================
# 应用配置
# =================================

# 应用名称
NEXT_PUBLIC_APP_NAME="多平台内容发布工具"

# 应用 URL
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NEXT_PUBLIC_API_BASE_URL="http://localhost:3000"

# 应用域名
NEXT_PUBLIC_APP_DOMAIN="localhost:3000"

# =================================
# 文件存储配置
# =================================

# 选项 1: 使用 Cloudflare R2
R2_ACCOUNT_ID="your-cloudflare-account-id"
R2_ACCESS_KEY_ID="your-r2-access-key-id"
R2_SECRET_ACCESS_KEY="your-r2-secret-access-key"
R2_BUCKET_NAME="your-bucket-name"
R2_PUBLIC_URL="https://your-custom-domain.com"

# 选项 2: 使用 Supabase Storage (无需额外配置，使用上面的 SUPABASE_URL 和密钥)

# =================================
# AI 服务配置 (可选)
# =================================

# OpenAI API (用于 AI 摘要生成)
OPENAI_API_KEY="sk-your-openai-api-key"
OPENAI_BASE_URL="https://api.openai.com/v1"

# 或使用其他 AI 服务
# DEEPSEEK_API_KEY="your-deepseek-api-key"

# =================================
# 支付配置 (可选)
# =================================

# Stripe (如果需要支付功能)
STRIPE_PUBLIC_KEY="pk_test_your-stripe-public-key"
STRIPE_SECRET_KEY="sk_test_your-stripe-secret-key"
STRIPE_WEBHOOK_SECRET="whsec_your-webhook-secret"

# =================================
# 分析服务 (可选)
# =================================

# Google Analytics
GOOGLE_ANALYTICS_ID="G-XXXXXXXXXX"

# Umami Analytics
UMAMI_WEBSITE_ID="your-umami-website-id"

# =================================
# 邮件服务 (可选)
# =================================

# Resend Email Service
RESEND_API_KEY="re_your-resend-api-key"
FROM_EMAIL="noreply@yourdomain.com"

# =================================
# 环境设置
# =================================

# 开发环境: development, 生产环境: production
NODE_ENV="development"

# 启用调试模式
# DEBUG="true"